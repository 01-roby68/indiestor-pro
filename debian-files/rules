#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1
#XXX I am not 100% sure of this. I just copied it, because it works, and not because all of this is really needed.
#XXX An investigation is needed, when time permits.

build:
	@dh_testdir
	@dh_testroot
	@dh_clean
	@dh_installdirs

binary: build
	#XXX copy all files/folders to ../debian/indiestor/usr/bin, ../debian/indiestor/usr/share/indiestor, and so on
	@touch build-stamp
	@dh_testdir -a
	@dh_testroot -a 
	@dh_install --sourcedir=debian/tmp -a
	@dh_installcron -a
	@dh_installlogrotate -a
	@dh_link -a
	@dh_lintian -a
	@dh_strip -a
	@dh_compress -a
	@dh_fixperms -a
	@dh_installdeb -a
	@dh_shlibdeps -a
	@dh_gencontrol -a
	@dh_md5sums -a
	@dh_builddeb -a
clean:
	@dh_clean

