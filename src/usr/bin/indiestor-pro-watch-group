#!/bin/sh
#------------------------------------------------------------
# Indiestor Pro program
# Concept, requirements, specifications, and unit testing
# By Alex Gardiner, alex@indiestor.com
# Written by Erik Poupaert, erik@sankuru.biz
# Commissioned at peopleperhour.com 
# Licensed under the GPL
#------------------------------------------------------------
group=$1
watchType=$2

if [ "$group" = "" ] ; then
	echo "group argument required" >&2 
	exit 1
fi

if [ "$watchType" = "" ] ; then
	echo "watchType argument required" >&2 
	exit 1
fi

if [ "$watchType" = "main" ] ; then
	events='move,move_self,create'
else
	events='modify'
fi

while indiestor-pro --group $group -show-watches $watchType | \
		inotifywait --exclude __${group}__${watchType}__ --fromfile - --event $events; do
	indiestor-pro-touch $group
done

