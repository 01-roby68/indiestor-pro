avid_workspace=$1

if [ "$avid_workspace" = "" ] ; then
	echo "avid workspace argument required" >&2 
	exit 1
fi

avid_workspace_file="/var/spool/indiestor-pro/$avid_workspace_file"

if [ ! -f $avid_workspace_file ]; then
	touch $avid_workspace_file
else
	if [  "$(pgrep -f '/usr/bin/php /usr/share/indiestor-pro-core/prg/indiestor-pro-inotify.php')" = "" ] ; then
		rm -f $avid_workspace_file
		/usr/bin/touch $avid_workspace_file
	fi
fi

